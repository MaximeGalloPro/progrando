<%# app/views/posts/index.html.erb %>
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Posts</h2>
        <%= link_to new_post_path, class: "btn btn-primary" do %>
            <i class="bi bi-plus-lg"></i> New Post
        <% end %>
    </div>

    <div id="posts" class="row row-cols-1 row-cols-md-3 g-4">
        <% @posts.each do |post| %>
            <div class="col">
                <div class="card h-100">
                    <% if post.thumbnail.attached? %>
                        <%= image_tag post.thumbnail, class: "card-img-top", style: "height: 15rem; object-fit: cover;" %>
                    <% else %>
                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 15rem;">
                            <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                        </div>
                    <% end %>

                    <div class="card-body d-flex flex-column">
                        <div>
                            <h5 class="card-title"><%= post.title.upcase %></h5>
                            <div class="text-muted small mb-2">
                                <%= post.published_at&.strftime("%d %b, %y") %> | <%= post.author %>
                            </div>
                            <p class="card-text"><%= truncate(sanitize(post.content, tags: %w(strong em)), length: 150, escape: false) %></p>
                        </div>

                        <div class="mt-auto">
                            <%= link_to "Lire Plus", post, class: "btn btn-outline-primary w-100" %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
