<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Connexion</h2>

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group mb-3">
                            <%= f.label :email, class: "form-label" %>
                            <%= f.email_field :email,
                                              autofocus: true,
                                              autocomplete: "email",
                                              class: "form-control",
                                              placeholder: "nom@exemple.com",
                                              value: Rails.env.development? ? 'admin@caf.com' : nil %>
                        </div>

                        <div class="form-group mb-3">
                            <%= f.label :password, "Mot de passe", class: "form-label" %>
                            <%= f.password_field :password,
                                                 autocomplete: "current-password",
                                                 class: "form-control",
                                                 placeholder: "Votre mot de passe",
                                                 value: Rails.env.development? ? 'password123' : nil,
                                                 id: "password-field" %>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>

                        <% if devise_mapping.rememberable? %>
                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <%= f.check_box :remember_me, class: "form-check-input" %>
                                    <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
                                </div>
                            </div>
                        <% end %>

                        <div class="d-grid gap-2">
                            <%= f.submit "Se connecter", class: "btn btn-primary btn-lg" %>
                        </div>
                    <% end %>

                    <div class="mt-3 text-center">
                        <%= render "devise/shared/links" %>
                    </div>

                    <% if Rails.env.development? %>
                        <div class="alert alert-info mt-3 text-center">
                            Environnement de développement<br>
                                <strong>Club Alpin Français</strong><br>
                                Admin: admin@caf.com<br>
                                Guide: guide@caf.com<br>
                                Membre: member1@caf.com, member2@caf.com, member3@caf.com<br>
                                Mot de passe: password123<br>
                                <strong>Randonneurs des Alpes</strong><br>
                                Admin: admin@rda.com<br>
                                Guide: guide@rda.com<br>
                                Membre: member1@rda.com, member2@rda.com, member3@rda.com<br>
                                Mot de passe: password123</small>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle password visibility
$(".toggle-password").click(function() {
    $(this).toggleClass("fa-eye fa-eye-slash");
    var input = $($(this).attr("toggle"));
    if (input.attr("type") == "password") {
        input.attr("type", "text");
    } else {
        input.attr("type", "password");
    }
});
</script>

<style>
.form-group {
  position: relative;
}

.field-icon {
  position: absolute;
  right: 10px;
  top: 72%;
  transform: translateY(-50%);
  z-index: 2;
  cursor: pointer;
  color: #495057;
}

#password-field {
  padding-right: 35px;
}
</style>