<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Connexion</h2>

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group mb-3">
                            <%= f.label :email, class: "form-label" %>
                            <%= f.email_field :email,
                                              autofocus: true,
                                              autocomplete: "email",
                                              class: "form-control",
                                              placeholder: "nom@exemple.com",
                                              value: Rails.env.development? ? 'admin@caf.com' : nil %>
                        </div>

                        <div class="form-group mb-3">
                            <%= f.label :password, "Mot de passe", class: "form-label" %>
                            <%= f.password_field :password,
                                                 autocomplete: "current-password",
                                                 class: "form-control",
                                                 placeholder: "Votre mot de passe",
                                                 value: Rails.env.development? ? 'password123' : nil %>
                        </div>

                        <% if devise_mapping.rememberable? %>
                            <div class="form-group mb-3">
                                <div class="form-check">
                                    <%= f.check_box :remember_me, class: "form-check-input" %>
                                    <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
                                </div>
                            </div>
                        <% end %>

                        <div class="d-grid gap-2">
                            <%= f.submit "Se connecter", class: "btn btn-primary btn-lg" %>
                        </div>
                    <% end %>

                    <div class="mt-3 text-center">
                        <%= render "devise/shared/links" %>
                    </div>

                    <% if Rails.env.development? %>
                        <div class="alert alert-info mt-3 text-center">
                            <small>Environnement de d√©veloppement<br>
                                <strong>Toutes organisations</strong><br>
                                creator@exemple.com<br>
                                multi_org_admin@exemple.com<br>
                                <strong>Organisation 1</strong><br>
                                Admin: admin@org1.com<br>
                                Guide: guide@org1.com<br>
                                <strong>Organisation 2</strong><br>
                                Admin: admin@org2.com<br>
                                Guide: guide@org2.com<br>
                                Mot de passe: password123</small>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>