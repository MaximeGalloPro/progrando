<% content_for :title, "Profils - #{@organisation.name}" %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Profils</h1>
        <%= link_to "Nouveau profil", new_organisation_profile_path(@organisation), class: "btn btn-primary" %>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    <% @profiles.each do |profile| %>
                        <tr>
                            <td><%= profile.name %></td>
                            <td><%= profile.description %></td>
                            <td>
                  <span class="badge <%= profile.active? ? 'bg-success' : 'bg-danger' %>">
                    <%= profile.active? ? 'Actif' : 'Inactif' %>
                  </span>
                            </td>
                            <td>
                                <%= link_to "Voir", organisation_profile_path(@organisation, profile), class: "btn btn-sm btn-outline-primary" %>
                                <%= link_to "Modifier", edit_organisation_profile_path(@organisation, profile), class: "btn btn-sm btn-outline-secondary" %>
                                <%= link_to "Supprimer",
                                            organisation_profile_path(@organisation, profile),
                                            class: "btn btn-sm btn-outline-danger",
                                            data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
                            </td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <% unless @profiles.any? %>
        <div class="alert alert-info mt-4">
            Aucun profil n'a été créé pour le moment.
        </div>
    <% end %>
</div>